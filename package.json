{
    "name": "MKTest1",
    "version": "1.0.0",
    "description": "A simple CAP project. 3",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap-cloud-sdk/http-client": "^2.6.0",
        "@sap-cloud-sdk/util": "^2.6.0",
        "@sap/cds": ">=5",
        "@sap/low-code-event-handler": "^1.0.1",
        "@sap/xsenv": "^3.3.2",
        "@sap/xssec": "^3.2.13",
        "express": "^4",
        "hdb": "^0.19.4",
        "passport": "^0.6.0"
    },
    "devDependencies": {
        "sqlite3": "^5.0.4",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds run",
        "undeploy": "cf undeploy MKTest1 --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "[production]": {
                "db": {
                    "kind": "hana-cloud"
                }
            },
            "db": {
                "kind": "sql"
            },
            "app-service": {
                "impl": "@sap/low-code-event-handler"
            },
            "uaa": {
                "kind": "xsuaa",
                "credentials": {}
            }
        }
    },
    "lcap": true
}